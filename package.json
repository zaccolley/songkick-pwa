{
  "name": "songkick.pink",
  "version": "5.5.0",
  "description": "experimental songkick web app",
  "repository": {
    "type": "git",
    "url": "https://github.com/zaccolley/songkick.pink.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "npm run -s lint",
    "lint": "eslint ./src",
    "fix": "eslint --fix ./src",
    "clean": "rm -rf ./build",
    "prebuild": "npm run clean && mkdir -p build && ncp src/assets build/assets",
    "build": "NODE_ENV=production webpack -p --progress",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node server.js",
    "dev": "node server.js",
    "deploy": "git pull && npm install && npm run build && pm2 restart pink"
  },
  "dependencies": {
    "autoprefixer": "^7.1.5",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.16.0",
    "core-js": "^2.4.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^3.0.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^0.9.0",
    "get-image-colors": "^1.8.0",
    "html-webpack-plugin": "^2.22.0",
    "localforage": "^1.4.3",
    "lowdb": "^0.15.5",
    "ncp": "^2.0.0",
    "node-fetch": "^1.6.3",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.8",
    "postcss-will-change": "^1.1.0",
    "preact": "^7.2.0",
    "preact-router": "^2.4.1",
    "sass-loader": "^6.0.6",
    "script-ext-html-webpack-plugin": "^1.8.5",
    "serviceworker-webpack-plugin": "^0.2.3",
    "style-loader": "^0.19.0",
    "unfetch": "^1.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^3.7.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  }
}
